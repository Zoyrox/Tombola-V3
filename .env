# ===== SERVER CONFIG =====
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ===== SUPER ADMIN CREDENTIALS =====
# Formato: [{"username":"nome","password":"hash"}]
# Genera hash con: node -e "console.log(require('bcryptjs').hashSync('password', 10))"
SUPER_ADMINS=[{"username":"admin","password":"$2a$10$TuHashQui1234567890ABCDEF"}]

# ===== SECURITY =====
SESSION_SECRET=tombola_production_secret_2024_change_this!
JWT_SECRET=another_secret_for_jwt_tokens_change_this_too!
CORS_ORIGIN=https://tua-app.onrender.com,http://localhost:3000

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW=900000  # 15 minuti in millisecondi
RATE_LIMIT_MAX=100        # 100 richieste per finestra

# ===== LOGGING =====
LOG_LEVEL=info
LOG_FILE=/data/tombola.log

# ===== REDIS (per clustering) =====
# Su Render.com, usa: render.com/dashboard -> Redis
REDIS_URL=redis://:password@host:port
REDIS_ENABLED=false

# ===== PERFORMANCE =====
SOCKET_PING_INTERVAL=25000
SOCKET_PING_TIMEOUT=5000
MAX_HTTP_BUFFER_SIZE=1e6  # 1MB

# ===== GAME SETTINGS =====
MAX_ROOMS_PER_ADMIN=10
MAX_PLAYERS_PER_ROOM=100
DEFAULT_AUTO_EXTRACT_INTERVAL=6000
ROOM_INACTIVITY_TIMEOUT=7200000  # 2 ore